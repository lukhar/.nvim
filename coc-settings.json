{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    }
  },
  "python.autoComplete.addBrackets": true,
  "python.jediEnabled": true,

  "list.source.grep.command": "rg",
  "list.maxHeight": 50,
  "list.source.helptags.defaultOptions": ["--top"],
  "list.source.extensions.defaultOptions": ["--top"],
  "list.source.commands.defaultOptions": ["--top"],
  "list.source.folders.defaultOptions": ["--top"],
  "list.source.filetypes.defaultOptions": ["--top"],
  "list.source.grep.defaultOptions": ["--top"],
  "list.source.tags.defaultOptions": ["--top"],
  "list.source.outline.defaultOptions": ["--top"],
  "list.source.symbols.defaultOptions": ["--top"],
  "list.source.buffers.defaultOptions": ["--top"],
  "list.source.files.defaultOptions": ["--top"],
  "list.source.sources.defaultOptions": ["--top"],
  "list.source.links.defaultOptions": ["--top"],
  "list.source.location.defaultOptions": ["--top"],
  "list.source.services.defaultOptions": ["--top"],
  "list.source.output.defaultOptions": ["--top"],
  "list.source.cmdhistory.defaultOptions": ["--top"],
  "list.source.maps.defaultOptions": ["--top"],
  "list.source.colors.defaultOptions": ["--top"],
  "list.source.windows.defaultOptions": ["--top"],
  "list.source.marks.defaultOptions": ["--top"],
  "list.source.mru.defaultOptions": ["--top"],
  "list.source.quickfix.defaultOptions": ["--top"],
  "list.source.words.defaultOptions": ["--top"],
  "list.insertMappings": {
    "<C-v>": "action:vsplit"
  },

  "diagnostic.warningSign": ">",
  "diagnostic.errorSign": ">>" 
}
