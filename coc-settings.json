{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  },
  "python.autoComplete.addBrackets": true,
  "python.jediEnabled": true,
  "list.source.grep.command": "ag",
  "list.maxHeight": 50
}
